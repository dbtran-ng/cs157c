<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
</head>

<body>
    <h1>Airports queries</h1>

    <form action="/quotes" method="POST">
        <input type="text" placeholder="code" name="code">
        <input type="text" placeholder="lat" name="lat">
        <input type="text" placeholder="lon" name="code">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="city" name="city">
        <input type="text" placeholder="state" name="state">
        <input type="text" placeholder="county" name="county">
        <input type="text" placeholder="woeid" name="woeid">
        <input type="text" placeholder="tz" name="tz">
        <input type="text" placeholder="email" name="email">
        <input type="text" placeholder="url" name="url">
        <input type="text" placeholder="runway_length" name="runway_length">
        <input type="text" placeholder="elev" name="elev">
        <input type="text" placeholder="icao" name="icao">
        <input type="text" placeholder="direct_flights" name="direct_flights">
        <input type="text" placeholder="carriers" name="carriers">
        <button type="submit">Submit</button>
    </form>

    <h2> All Airports </h2>

    <ul class="airports">
        <!-- Loop through quotes -->
        <% for(var i=0; i < airportsArray.length; i++) {%>
            <li class="quote">
                <!-- Output name from the iterated quote object -->
                <span>
                    <%= airportsArray[i].name %>
                </span>:
                <!-- Output quote from the iterated quote object -->
                <span>
                    <%= airportsArray[i].country %>
                </span>
            </li>
            <li>
                <button id="update-button">Update</button>
            </li>
            <% } %>
    </ul>

    <script src="main.js"></script>
</body>

</html>